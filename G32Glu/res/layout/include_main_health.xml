<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_health_phases"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/img_health_phases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/health_phases" />

    <TextView
        android:id="@+id/txt_health_hint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_health_phases"
        android:layout_margin="6dp"
        android:layout_toRightOf="@+id/img_health_phases"
        android:text="还剩4项任务没完成"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_health_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_health_hint1"
        android:layout_below="@+id/txt_health_hint1"
        android:text="还剩4项任务没完成"
        android:textColor="@color/white2"
        android:textSize="14sp" />

</RelativeLayout>